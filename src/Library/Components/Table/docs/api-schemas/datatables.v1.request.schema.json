{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mantra.smartfren.dev/schemas/datatables.v1.request.schema.json",
  "title": "Datatables Request v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "draw": {"type": "integer", "minimum": 0},
    "start": {"type": "integer", "minimum": 0},
    "length": {"type": "integer", "minimum": 1, "maximum": 200},
    "order": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "column": {"type": "string", "minLength": 1},
          "dir": {"type": "string", "enum": ["asc", "desc"]}
        },
        "required": ["column", "dir"]
      }
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "data": {"type": "string", "minLength": 1},
          "searchable": {"type": "boolean"},
          "orderable": {"type": "boolean"},
          "visible": {"type": "boolean"},
          "type": {"type": "string"}
        },
        "required": ["data"]
      }
    },
    "filters": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "op": {
            "type": "string",
            "enum": ["=", "!=", ">", ">=", "<", "<=", "LIKE", "IN", "BETWEEN"]
          },
          "value": {}
        },
        "required": ["op", "value"]
      }
    },
    "context": {"type": "object"}
  },
  "required": ["start", "length"]
}